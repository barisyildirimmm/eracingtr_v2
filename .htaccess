<IfModule mod_rewrite.c>
    # Yalnızca public dizinine yönlendirme
    RewriteEngine On

    # HTTPS yönlendirmesi
    RewriteCond %{HTTPS} off
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Laravel için doğru giriş dosyasına yönlendirme
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

# Dizin listelemeyi devre dışı bırak
Options -Indexes

# public/index.php dosyasının varsayılan olarak yüklenmesini sağla
DirectoryIndex public/index.php public/index.html

